                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="page-f text-center">
            <div class="container">
                © 2020 Copyright:<a href="https://github.com/khoi140499" target="_blank"> Fllow me on GitHub</a>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('.btn-search').on('click', function () {
                $('.backgroundblack').addClass('backgroundblack-block');
                $('.searchs').addClass('searchs-block');
            });
            $('.backgroundblack').on('click', function () {
                $('.searchs').removeClass('searchs-block');
                $('.backgroundblack').removeClass('backgroundblack-block');
            })
        })
    </script>
</body>
</html>
