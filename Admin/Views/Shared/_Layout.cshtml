<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thời trang chính hãng giá rẻ</title>
    <link rel="shortcut icon" href="/img/logo.ico">
    <script src="/Scripts/jquery-3.4.1.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/Content//bootstrap.min.css">
    <link rel="stylesheet" href="/fontawesome-free-5.12.1-web/css/all.css">
    <link rel="stylesheet" type="text/css" href="/Content/index.css">
    <link rel="stylesheet" type="text/css" href="/Content/fooster.css">
    <link rel="stylesheet" type="text/css" href="/Content/slo-wrapper.css">
    <link rel="stylesheet" type="text/css" href="/Content/menu.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
        .ac-tk a {
            color: black;
        }

            .ac-tk a:hover {
                color: #8B4730;
            }

        .mnu ul li a {
            color: black;
        }

        .las {
            height: 55px;
            border-radius: 10px;
            margin-top: 5px;
        }

        .searchs {
            width: 100%;
            height: 55px;
            position: absolute;
            border-radius: 20px;
            z-index: 100;
            display: none;
            transition: 0.3s;
        }

        .backgroundblack {
            background: black;
            width: 100%;
            height: 100%;
            z-index: 99;
            opacity: 0.4;
            position: absolute;
            display: none;
            transition: 0.3s;
        }

        .searchs-block{
            display: block;
            animation: up1 0.6s forwards;
        }

        .backgroundblack-block {
            display: block;
            animation: up 0.6s forwards;
        }

        @@keyframes up{
            0%{
                opacity: 0;
            }
            100%{
                opacity: 0.6;
            }
        }

        @@keyframes up1{
            0%{
                transform: translateY(-50px);
            }
            100%{
                transform: translateY(0px);
            }
        }


    </style>
</head>
<body>
    <div class="backgroundblack">
        
    </div>
    <div class="head">
        <div class="container">
            <div class="row">
                <div class="col-xs-4 text-right rm">
                    <span class="t_head">CHẤT LƯỢNG HÀNG ĐẦU, GIÁ CẢ HỢP LÝ</span>
                </div>
                <div class="col-xs-4 text-center rm">
                    <span class="t_head">LUÔN CẬP NHẬT NHỮNG STYLE MỚI NHẤT</span>
                </div>
                <div class="col-xs-4 text-left rm">
                    <span class="t_head">GIAO HÀNG MIỄN PHÍ</span>
                </div>
            </div>
        </div>
    </div>
    <!-- wrapper -->
    <div class="wrapper">
        <div class="container">
            <div class="navbar">
                <div class="nv-header">
                    <a href="@Url.Action("Index", "Home")">
                        <img class="hv" src="/img/logo.png">
                    </a>
                </div>
                <div class="searchs">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "lns" }))
                    {
                        @Html.TextBox("search", null, new
                        {
                            @class = "form-control las",
                             @placeholder = "Tìm kiếm sản phẩm trên cửa hàng..."
                        })
                    }
                </div>
                <div style="float: left; width: 86%;">
                    <ul class="list-group mnu" style="width: 100%;">
                        <li class="list-group-item">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="#">Home</a></li>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        Page 1
                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#">Page 1-1</a></li>
                                        <li><a href="#">Page 1-2</a></li>
                                        <li><a href="#">Page 1-3</a></li>
                                    </ul>
                                </li>
                                <li><a href="#">Page 2</a></li>
                                <li><a href="#">Page 3</a></li>
                            </ul>
                        </li>
                        <li class="list-group-item ac-tk" style="width: 35px;line-height: 55px;float: right">
                            <a href="@Url.Action("ThanhToan", "Home")">
                                <span>
                                    <i class="fas fa-cart-plus" style="font-size: 16px;margin-top: 1px;"></i>
                                </span>
                            </a>
                        </li>
                        <li class="list-group-item ac-tk" style="width: 35px;line-height: 57px;float: right;">
                            <a href="@Url.Action("Index", "Login")">
                                <span>
                                    <i class="fas fa-user-circle" style="font-size: 18px;"></i>
                                </span>
                            </a>
                        </li>
                        <li class="list-group-item ac-tk " style="width: 35px;line-height: 55px;float: right">
                            <span style="cursor: pointer" class="btn-search">
                                <i class="fas fa-search style="font-size: 16px;margin-top: 1px;"></i>
                            </span>
                        </li>

                        <div class="col-xs-12 text-right menutong">
                            <i class="fas fa-bars">
                            </i>
                        </div>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- banner-image -->
    <div class="banner-im" style="background-color: white;">
        <div class="container lm text-center">
            <img src="/img/banner.png" alt="banner" class="img-responsive">
        </div>
    </div>

    <!-- Sơ mi nam -->
    <div style="height: 30px; width: 100%; color: #FBF8F1;"></div>

    <div class="container body-content">
        @RenderBody()
    </div>
    
