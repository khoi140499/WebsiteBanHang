
@{
    ViewBag.Title = "Index";
}
<style>
    .account_login {
        width: 60%;
        float: left;
        height: 800px;
        padding-top: 30px;
    }

    .account_login li {
        border: 0px;
     }

    .av {
        font-size: 40px;
    }

    .bt {
        width: 140px;
        height: 40px;
        font-size: 16px;
        text-align: center;
        padding-left: 10px;
    }

    #dc {
        height: 40px;
    }

    .bts {
        width: 100%;
        height: 45px;
        border: 0px;
        border-radius: 5px;
        font-size: 20px;
    }
    #dc1 {
        height: 40px;
        text-align: center;
        border-radius: 5px;
        border: 0px;
        background-color: #C9C9C9;
        color: black;
        font-size: 20px;
    }
    #dc1:hover{
        text-decoration: none;
    }
</style>

<div class="acc">
    <div class="account_login">
        <ul class="list-group" style="width: 450px;height: 690px;border: 1px solid #D3D3D3; padding: 0px 30px 0px 30px;border-radius: 10px;">
            <li class="list-group-item" style="margin-top: 10px;">
                <span style="font-size: 28px;">Đăng ký</span>
            </li>
            <li class="list-group-item fr">
                @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { @name = "register", @onsubmit = "return validationForm()" }))
                {
                    <input type="file" name="file" class="form-control" id="dc"/>
                    <span class="spanusername" style="color: red;margin-top: 10px;"></span>
                    <br />
                    @Html.TextBox("txtUsername", null, new { @class = "form-control", @id = "dc", @placeholder = "Enter username" })

                    <span class="spanusername" style="color: red;margin-top: 10px;"></span>
                    <br />
                    @Html.Password("txtPassword", null, new { @class = "form-control", @id = "dc", @placeholder = "Enter password" })
                    <span class="spanpassword" style="color: red;margin-top: 10px;"></span>
                    <br />
                    @Html.TextBox("txtFullname", null, new { @class = "form-control", @id = "dc", @placeholder = "Enter fullname" })
                    <span class="spanfullname" style="color: red;margin-top: 10px;"></span>
                    <br />
                    @Html.TextBox("txtBio", null, new { @class = "form-control", @id = "dc", @placeholder = "Enter Bio" })
                    <span class="spanbio" style="color: red;margin-top: 10px;"></span>
                    <br />
                    @Html.TextBox("txtEmail", null, new { @class = "form-control", @id = "dc", @placeholder = "Enter Email" })
                    <span class="spanemail" style="color: red;margin-top: 10px;"></span>
                    <br />
                    @Html.TextBox("txtDate", null, new { @class = "form-control", @id = "dc", @placeholder = "Enter Date" })
                    <span class="spandate" style="color: red;margin-top: 10px;"></span>
                    <br />
                    @Html.TextBox("txtAddress", null, new { @class = "form-control", @id = "dc", @placeholder = "Enter address" })
                    <span class="spanaddress" style="color: red;margin-top: 10px;"></span>
                    <br />
                    <input type="submit" name="submit" class="bts" id="dc1" value="Register" />
                    }
                </li>
            <li class="list-group-item dk">
                <span>Đã có tài khoản ?</span>
                <a class="btn btn-light" href="@Url.Action("Index", "Login")"><span>Đăng nhập</span></a>
            </li>
        </ul>
    </div>
</div>