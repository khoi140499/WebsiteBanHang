    <!-- wrapper -->
    <div class="wrapper">
        <div class="container">
            <div class="navbar">
                <div class="nv-header">
                    <a href="@Url.Action("Index", "Home")">
                        <img class="hv" src="/img/logo.png">
                    </a>
                </div>
                <ul class="list-group">
                    <li class="list-group-item timkiem">
                        <div class="search">
                            @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "lns" }))
                            {
                                @Html.TextBox("search", null, new {@class="form-control", 
                               @placeholder= "Tìm kiếm sản phẩm trên cửa hàng..." })
                            }
                        </div>
                    </li>
                    <li class="list-group-item cart_bt lt-card">
                        @{
                            HttpCookie ck = Request.Cookies["giohang1"];
                            if (ck != null && ck.Value != "")
                            {
                                if (ck["count"] == "0")
                                {
                                    <div class="cartcount" style="display: none;">
                                        <span id="count">@ck["count"]</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="cartcount" style="display: block;">
                                        <span id="count">@ck["count"]</span>
                                    </div>
                                }

                            }
                            else
                            {
                                <div class="cartcount" style="display: none">
                                    <span id="count"></span>
                                </div>
                            }
                        }
                        @{
                            HttpCookie cks = Request.Cookies["users"];
                            if (cks != null && cks.Value != "")
                            {
                                <a href="@Url.Action("ThanhToan", "Home")">
                                    <span>
                                        <i class="fas fa-cart-plus"></i>
                                        <span>Giỏ hàng</span>
                                    </span>
                                </a>
                                
                            }
                            else
                            {
                                <a href="@Url.Action("Login", "Login")">
                                    <span>
                                        <i class="fas fa-cart-plus"></i>
                                        <span>Giỏ hàng</span>
                                    </span>
                                </a>
                            }
                        }

                    </li>
                    <li class="list-group-item taikhoan lt-card info-a">
                        @{ 
                           HttpCookie cookie = Request.Cookies["users"];
                           if(cookie !=null && cookie.Value != "")
                           {
                                <a href="@Url.Action("Infomation", "Home")">
                                <span>
                                    <i class="fas fa-user"></i>
                                    <span>Tài khoản</span>
                                </span>
                                </a>
                                <div class="inf">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <a href="@Url.Action("Infomation","Home")">
                                                <span>Thông tin tài khoản</span>
                                            </a>
                                        </li>
                                        <li class="list-group-item">
                                            <a href="@Url.Action("ChangeInfomation","Home")">
                                                <span>Chỉnh sửa thông tin</span>
                                            </a>
                                        </li>
                                        <li class="list-group-item">
                                           @using(Html.BeginForm("LogOut", "Home", FormMethod.Post))
                                             {
                                                <input type="submit" value="Đăng xuất" class="dx"/>       
                                             }
                                        </li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <a href="@Url.Action("Login", "Login")">
                                    <span>
                                        <i class="fas fa-user"></i>
                                        <span>Tài khoản</span>
                                    </span>
                                </a>
                                }
                            }
                    </li>
                    <div class="col-xs-12 text-right menutong">
                        <i class="fas fa-bars">
                        </i>
                    </div>
                </ul>
            </div>
        </div>
    </div>
