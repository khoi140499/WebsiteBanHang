    <style>
        .spanmenu {
            color: white;
        }

        .spanmenu:hover {
            text-decoration: none;
            color: white;
         }

        .card-menu:hover {
            cursor: pointer;
        }

        .ts {
            background-color: white;
        }

        .lt-card a:hover {
            text-decoration: none;
            color: #8B4730;
        }
        .inf{
            position: absolute;
            width: 200px;
            text-align:center;
            height: 130px;
            background-color: white;
            border: 1px solid black;
            margin-left: -40px;
            margin-top: 10px;
            z-index: 5;
            visibility: hidden;
            transition: 0.1s;
        }
        .info-a:hover .inf {
            visibility: visible;
            animation: a2 0.4s forwards;
        }
        keyframes a2{
	        0%{
		        transform: translateX(40px);
	        }
	        100%{
		        transform: translateX(0px);
	        }
        }
        .dx{
            border: 0px;
            background-color: white;
        }
        .cartcount {
            position: absolute;
            width: 25px;
            height: 17px;
            border-radius: 20px;
            background-color: black;
            transition: 0.2s;
            margin-left: 13px;
            margin-top: -10px;
            opacity: 0.6;
            text-align: center;
            font-size: 12px;
            line-height: 18px;
            color: white;
            animation: a10 0.5s ease-in;
        }
        @@keyframes a10{
	        0%{
		        opacity: 0;
	        }
	        100%{
		        opacity: 0.6;
	        }
}
    </style>
</head>
<body>
    <div class="head">
        <div class="container">
