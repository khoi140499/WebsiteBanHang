<div class="col-xs-12 fm-slide">
    <div class="slide">
        <div id="mySlide" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#mySlide" data-slide-to="0" class="active"></li>
                <li data-target="#mySlide" data-slide-to="1"></li>
                <li data-target="#mySlide" data-slide-to="2"></li>
                <li data-target="#mySlide" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img src="/img/a1.jpg" alt="anh1">
                </div>
                <div class="item">
                    <img src="/img/a2.jpg" alt="anh2">
                </div>
                <div class="item">
                    <img src="/img/a3.jpg" alt="anh3">
                </div>
                <div class="item">
                    <img src="/img/a4.jpg" alt="anh4">
                </div>
            </div>
            <a class="left carousel-control" href="#mySlide" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#mySlide" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="spnoibat-ttnam" style="background-color: white; margin-top: 40px;">
    <div class="container">
        <div class="spnoibat-tittle text-center">
            <span>THỜI TRANG NAM</span>
            <div class="gachchan"></div>
        </div>
    </div>
</div>
<div class="sp-hang1" style="background-color: white;">
    <div class="container">
        @{
            if (Model != null)
            {
                int i = 0;
                foreach (var item in Model)
                {
                    if (item.loaisanpham.TrimEnd() == "thoitrangnam")
                    {
                        <div class="card sp" id="@item.masp">
                            <div class="card-img">
                                <img src="@item.anh">
                            </div>
                            <div class="card-info">
                                <div class="card-tt text-center">
                                    <span>@item.tensp</span><br>
                                    <b style="color: red">@item.giasp</b><b style="color: red;">đ</b>
                                </div>
                                <div class="card-mh text-center">
                                    <button class="btn btn-danger addcart" type="submit">
                                        <i class="fas fa-shopping-cart"></i>
                                        <span>Thêm vào giỏ</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        if (i == 3)
                        {
                            <div class="card1 sp" id="@item.masp">
                                <div class="card-img">
                                    <img src="@item.anh">
                                </div>
                                <div class="card-info">
                                    <div class="card-tt text-center">
                                        <span>@item.tensp</span><br>
                                        <b style="color: red">@item.giasp</b><b style="color: red;">đ</b>
                                    </div>
                                    <div class="card-mh text-center">
                                        <button class="btn btn-danger addcart" type="submit">
                                            <i class="fas fa-shopping-cart"></i>
                                            <span>Thêm vào giỏ</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            break;
                        }
                        i++;

                    }
                }

            }
        }
    </div>
</div>
<div class="all text-center">
    <a href="@Url.Action("ThoiTrangNam", "Home")">
        <span>Xem tất cả</span>
    </a>
</div>
