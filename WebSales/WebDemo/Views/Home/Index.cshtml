<script>
    $(document).ready(function () {
        $('.addcart').on('click', function () {
            var masp = parseInt($(this).closest('.sp').prop('id'));
            $.ajax({
                type: 'POST',
                contentType: 'application/json;charset=utf-8',
                url: 'AddCart',
                data: "{'masanpham':'" + masp + "'}",
                success: function (data) {
                    if (parseInt(data) > 0) {
                        $(".cartcount").css("display", "block")
                        $('#count').html(data)
                    }
                },
                error: function (data) {
                    $('.ids').html(data)
                }
            })
        })
    })
</script>
