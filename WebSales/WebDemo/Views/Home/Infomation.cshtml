@model WebDemo.Models.User
@{
    ViewBag.Title = "Infomation";
}
<link rel="stylesheet" href="css/bootstrap.min.css">
<style>
    .profile{
        height: 550px;
        margin-bottom: 50px;
    }
    .profile_h {
        border: 1px solid #D3D3D3;
        border-radius: 10px;
        position: absolute;
        height: 500px;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        padding-top: 20px;
    }
    .img1{
        float: left;
        width: 140px;
    }
    h3{
        float: left;
    }
    .ig{
        padding-left: 145px;
    }
    .col-lg-12{
        margin-top: 10px;

    }
    .fullname{ 
        font-size: 30px;
        font-weight: bold;
    }
    .ag{
        font-size:20px;
        color: #808080;
    }
    .lgs{
        height: 40px;
        line-height: 50px;
        border-top: 0.4px solid #d3d3d3;
    }
</style>
<div class="col-lg-12 profile">
    <div class="col-lg-5 profile_h">
        <div class="col-lg-12 ig">
            <img src="~/img/profile.jpg" class="img1 img-circle" />
        </div>
        @{
            if (Model != null)
            {
                <div class="col-lg-12 text-center lg">
                    <span class="fullname">
                        @Model.fullname
                    </span>
                </div>
                <div class="col-lg-12 text-center lgs">
                    <span class="ag">
                        @Model.age year old
                    </span>
                </div>
                <div class="col-lg-12 text-center lgs">
                    <span class="ag">
                        @Model.phone
                    </span>
                </div>
                <div class="col-lg-12 text-center lgs">
                    <span class="ag">
                        @Model.email
                    </span>
                </div>
                <div class="col-lg-12 text-center lgs">
                    <span class="ag">
                        @Model.address
                    </span>
                </div>
            }
        }
    </div>
</div>