@model IEnumerable<WebDemo.Models.Sanpham>
<style>
</style>
<div class="container" style="margin-bottom: 50px;">
    @{
        var sp1 = Model.First();
        var sp2 = Model.Last();
        <table style="border: 1px solid #EFEFEF; border-collapse: collapse; width: 100%; height: 600px;">
            <tr style="background: #009A82; color: white; height: 50px;">
                <th style="text-align: center;border-bottom: 1px solid #EFEFEF;
                    font-size: 23px;" colspan="3">Thông tin chung</th>
            </tr>
            <tr>
                <td style="border-right: 1px solid #EFEFEF; background: #EFEFEF; width: 20%;height: 360px;
                font-size: 20px; text-align:center; font-weight: bold">
                    <span>Hình ảnh, giá bán</span>
                </td>
                <td style="width: 40%; text-align: center;border-right: 1px solid #EFEFEF">
                    <div>
                        <div style="float: left; width: 100%;margin-left: 120px; margin-bottom: 10px
                        ; margin-top: 10px;">
                            <img src="@sp1.anh" class="img-responsive" />
                        </div>
                        <div style="float: left; width: 100%; text-align: center">
                            @using (Html.BeginForm("Deltails", "Home", FormMethod.Get))
                            {
                                <input type="number" name="masp" value="@sp1.masp" hidden />
                                <input type="submit" class="btn btn-block" style="font-size: 18px;width: 100%;
                                background: white; border: 0px;margin-bottom: 5px; height: 30px; line-height: 
                                        7px;font-weight: bolder" value="@sp1.tensp">
                            }
                        </div>
                        <br>
                        <span style="width: 100%; float: left; color: red; font-weight: bold;
                        margin-bottom: 10px;">
                            Gía: @sp1.giasp
                        </span>
                    </div>
                </td>
                <td style="width: 300px; text-align: center;">
                    <div>
                        <div style="float: left; width: 100%;margin-left: 120px; margin-bottom: 10px
                        ; margin-top: 10px;">
                            <img src="@sp2.anh" class="img-responsive" />
                        </div>
                        <div style="float: left; width: 100%; text-align: center">
                            @using (Html.BeginForm("Deltails", "Home", FormMethod.Get))
                            {
                                <input type="number" name="masp" value="@sp2.masp" hidden />
                                <input type="submit" class="btn btn-block" style="font-size: 18px;width: 100%;
                                background: white; border: 0px;margin-bottom: 5px; height: 30px; line-height:
                                        7px;font-weight: bolder" value="@sp2.tensp">
                            }
                        </div><br>
                        <span style="width: 100%; float: left; color: red; font-weight: bold;
                        margin-bottom: 10px;">
                            Gía: @sp2.giasp
                        </span>
                    </div>
                </td>
            </tr>
            <tr style="border-top: 1px solid #EFEFEF;">
                <td style="background: #EFEFEF; font-size: 20px; text-align: center; font-weight: bold; height: 50px;">
                    <span>Kích cỡ</span>
                </td>
                <td style="border-left: 1px solid #EFEFEF;
                border-right: 1px solid #EFEFEF; text-align: center">
                    <span>@sp1.kichco</span>
                </td>
                <td style="text-align: center; width: 300px;">
                    <span>@sp2.kichco</span>
                </td>
            </tr>
            <tr style="border-top: 1px solid #EFEFEF">
                <td style="background: #EFEFEF; font-size: 20px; text-align: center; font-weight: bold;">
                    <span>Mô tả</span>
                </td>
                <td style="border-left: 1px solid #EFEFEF;
                border-right: 1px solid #EFEFEF; width: 300px; text-align: center;">
                    <span>@sp1.mota</span>
                </td>
                <td style="text-align: center; width: 300px;">
                    <span>@sp2.mota</span>
                </td>
            </tr>
        </table>
    }
</div>
